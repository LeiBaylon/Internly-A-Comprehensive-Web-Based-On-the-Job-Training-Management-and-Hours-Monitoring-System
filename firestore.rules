rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ═══════════════════════════════════════════════════
    // ─── Helper Functions ─────────────────────────────
    // ═══════════════════════════════════════════════════

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ═══════════════════════════════════════════════════
    // ─── Users & Subcollections ───────────────────────
    // ─── users/{userId}              — profile
    // ─── users/{userId}/dailyLogs    — training logs
    // ─── users/{userId}/weeklyReports — weekly reflections
    // ─── users/{userId}/notifications — alerts
    // ═══════════════════════════════════════════════════

    match /users/{userId} {
      // Users can only read and write their own profile
      allow read, write: if isOwner(userId);

      // All subcollections inherit owner-only access
      match /dailyLogs/{logId} {
        allow read, write: if isOwner(userId);
      }

      match /weeklyReports/{reportId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notifId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ═══════════════════════════════════════════════════
    // ─── Legacy Flat Collections (read-only for migration)
    // ═══════════════════════════════════════════════════

    match /dailyLogs/{logId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    match /weeklyReports/{reportId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    match /notifications/{notificationId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // ═══════════════════════════════════════════════════
    // ─── Chat Users ───────────────────────────────────
    // ═══════════════════════════════════════════════════

    match /chatUsers/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // ═══════════════════════════════════════════════════
    // ─── Conversations ────────────────────────────────
    // ═══════════════════════════════════════════════════

    match /conversations/{conversationId} {
      allow read, update: if isAuthenticated()
        && request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated()
        && request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        allow read, create, update: if isAuthenticated()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    // ═══════════════════════════════════════════════════
    // ─── Supervisors (shared) ─────────────────────────
    // ═══════════════════════════════════════════════════

    match /supervisors/{supervisorId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated()
        && resource.data.addedBy == request.auth.uid;
    }

    // ═══════════════════════════════════════════════════
    // ─── App Metadata ─────────────────────────────────
    // ═══════════════════════════════════════════════════

    match /appMetadata/{docId} {
      allow read: if isAuthenticated();
    }

    // ═══════════════════════════════════════════════════
    // ─── Schema Documents ─────────────────────────────
    // ═══════════════════════════════════════════════════

    match /{collection}/_schema_ {
      allow read: if isAuthenticated();
    }

    match /{collection}/_schema_/{subcol}/{docId} {
      allow read: if isAuthenticated();
    }
  }
}
